{
  "name": "@sabor-tricolor/ingredientes",
  "version": "1.0.0",
  "type": "module",
  "description": "Normalizador inteligente de ingredientes bolivianos con sinónimos regionales y búsqueda fuzzy",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "data",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./data": "./data/ingredientes.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm test",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "keywords": [
    "bolivia",
    "ingredientes",
    "recetas",
    "sinónimos",
    "normalización",
    "fuzzy-search",
    "quechua",
    "aymara",
    "gastronomía"
  ],
  "author": "Ariel Jonnathan Camacho Silvestre",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ariel-silvestre/ingredientes-bolivia.git"
  },
  "bugs": {
    "url": "https://github.com/ariel-silvestre/ingredientes-bolivia/issues"
  },
  "homepage": "https://github.com/ariel-silvestre/ingredientes-bolivia#readme",
  "dependencies": {
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.38.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}